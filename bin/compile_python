#!/usr/bin/env bash

for VERSION in $VERSIONS
do
   # Get cython minor version
   CYTHON=$(find /opt/_internal -maxdepth 1 | grep -- -$VERSION | xargs basename )

   # Get minor version
   MINOR=$(echo $CYTHON | cut -d- -f2-)

   # Download source
   wget https://github.com/python/cpython/archive/v$MINOR.tar.gz
   tar zxf v$MINOR

   # Install
   pushd $CYTHON
      ./configure --enable-shared
      make -j
      make install
   popd

   # Clean up
   rm -rf $CYTHON v$MINOR
done
